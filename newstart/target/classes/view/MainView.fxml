<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="view.MainViewController">
    <top>
        <VBox spacing="10" padding="10">
            <Label text="Ajouter une commande"/>
            <TextField fx:id="phoneNumberField" promptText="Numéro de téléphone"/>
            <Button text="Rechercher Client" onAction="#onSearchClient"/>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" padding="10">
            <Label text="Informations du Client"/>
            <Label text="Nom: " fx:id="clientNameLabel"/>
            <Label text="Adresse: " fx:id="clientAddressLabel"/>
        </VBox>
    </center>
    <bottom>
        <Button text="Valider la Commande" onAction="#onValidateOrder"/>
    </bottom>
</BorderPane>

